doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Stock
  link(rel='stylesheet' href='/css/stock.css')
h1 Stock
table
  thead
    tr
      th Product Name
      th Product Type
      th Cost Price
      th Selling Price
      th Quantity
      th Supplier&apos;s Name
      th Date Received
      th Quality
      th Color
      th Measurements
      th Actions
  tbody
    if items.length 
      each item in items 
        tr 
          td #{item.productName}
          td #{item.productType} 
          td #{item.costPrice}
          td #{item.sellingPrice}
          td #{item.quantity}
          td #{item.supplierName}
          td #{moment(item.dateReceived).format("DD-MM-YYYY")}
          td #{item.quality}
          td #{item.color}
          td #{item.measurements}
          td 
           a.btn.btn-warning(href=`/editstock/${item._id}`) Edit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
