extends layout 
block content
  .section
    h2 Stock Recording
    form(action='/recordstock' method='post')
      label
        | Product Name:
        input(type='text' name='productName' required)

      label
        | Product Type:
        input(type='text' name='productType' required)

      label
        | Quantity:
        input(type='number' name='quantity' required)

      label
        | Cost Price:
        input(type='number' name='costPrice' required)

      label
        | Selling Price:
        input(type='number' name='sellingPrice' required)

      label
        | Supplier Name:
        input(type='text' name='supplierName' required)

      label
        | Date Received:
        input(type='date' name='dateReceived' required)

      label
        | Quality:
        input(type='text' name='quality')

      label
        | Color:
        input(type='text' name='color')

      label
        | Measurements:
        input(type='text' name='measurements')

        button(type='submit' class='btn btn-primary mt-3') Add Stock
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
